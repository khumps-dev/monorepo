{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "watch",
            "args": [
                "-c",
                "-x",
                "check --all-features --all-targets"
            ],
            "problemMatcher": [
                "$rustc",
                "$rust-panic"
            ],
            "label": "Cargo Watch"
        },
        {
            "type": "cargo",
            "command": "fmt",
            "args": [
                "--all"
            ],
            "label": "Cargo Format",
            "problemMatcher": []
        },
        {
            "type": "cargo",
            "command": "install",
            "args": [
                "cargo-watch"
            ],
            "label": "Install cargo-watch",
            "problemMatcher": []
        },
    ]
}